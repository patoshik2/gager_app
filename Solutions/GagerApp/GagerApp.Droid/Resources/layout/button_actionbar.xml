<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	>
	<bindableUI.droid.views.BindableButton
    android:id="@+id/command_button"
		android:layout_width="match_parent"
		android:layout_height="@dimen/mtrl_min_touch_target_size"
		android:layout_gravity="center"
		style="?attr/borderlessButtonStyle"
		app:Binding="{Target=Text, Source=Text, Mode=OneWay;
		Target=Command, Source={Binding}, Mode=OneWay
		}"
	/>
</FrameLayout>
